@model IEnumerable<Category>

<div class="text-center my-5 pb-3 border-bottom">
    <h2 class="fw-bold">Kategoriler</h2>
    <p class="text-muted">Sistemde kayýtlý tüm kategoriler</p>
</div>

<div class="category-list">

    @foreach (var cat in Model)
    {
        <div class="category-item">
            <div class="category-icon">
                <i class="fa fa-tag"></i>
            </div>

            <div class="category-name">
                @cat.CategoryName
            </div>

            <div class="category-actions">
                <a asp-controller="Category" asp-action="Update" asp-route-id="@cat.CategoryId"
                   class="btn btn-sm btn-outline-primary">
                    Düzenle
                </a>

                <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.CategoryId"
                   class="btn btn-sm btn-outline-danger">
                    Sil
                </a>
            </div>
        </div>
    }

</div>

<style>

    .category-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem 0;
    }

    .category-item {
        display: flex;
        align-items: center;
        gap: 1.2rem;
        background: #ffffff;
        border-radius: 10px;
        padding: 1rem 1.5rem;
        border: 1px solid #eee;
        transition: all .3s ease;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

        .category-item:hover {
            transform: translateX(6px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.10);
        }

    .category-icon {
        background: #3498db;
        color: white;
        width: 45px;
        height: 45px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        flex-shrink: 0;
    }

    .category-name {
        flex-grow: 1;
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
    }

    .category-actions .btn {
        margin-left: 0.5rem;
        font-weight: 600;
    }
</style>
