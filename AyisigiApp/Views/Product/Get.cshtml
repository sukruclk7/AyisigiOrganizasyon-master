@model Product

<div class="container py-5">

    <!-- Ürün Baþlýk -->
    <div class="text-center mb-4">
        <h2 class="fw-bold product-title">
            @Model.ProductName
        </h2>

        <div class="product-price mt-3">
            @Model.ProductPrice.ToString("C2")
        </div>
    </div>

    <div class="row justify-content-center">

        <!-- Ürün Görseli -->
        <div class="col-lg-8 col-md-10 mb-4">
            <div class="product-image-card shadow-lg">
                <img src="@Model?.ImageUrl"
                     alt="@Model.ProductName"
                     class="img-fluid product-img" />
            </div>
        </div>

        <!-- Ürün Açýklama ve Butonlar -->
        <div class="col-lg-8 col-md-10 text-center">

            <p class="product-summary mb-4">
                @Model?.Summary
            </p>

            <div class="button-group d-flex justify-content-center gap-3">

                <!-- Ana Sayfa -->
                <a class="btn btn-outline-light btn-lg px-4"
                   asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-house"></i> Ana Sayfa
                </a>

                <!-- Sepete Ekle -->
                <form id="@Model.ProductId" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden"
                           name="returnUrl"
                           value="@ViewContext.HttpContext.Request.PathAndQuery()" />

                    <button type="submit"
                            class="btn btn-warning btn-lg text-dark px-4 fw-bold shadow-sm add-cart-btn">
                        <i class="fa fa-cart-plus"></i> Sepete Ekle
                    </button>
                </form>

                <!-- Ürün Listesi -->
                <a class="btn btn-outline-light btn-lg px-4"
                   asp-controller="Product" asp-action="Index">
                    <i class="fa-solid fa-list"></i> Tüm Ürünler
                </a>
            </div>

        </div>
    </div>

</div>

<style>
    /* Sayfa arka planý */
    body {
        background-color: #111 !important;
    }

    /* Ürün baþlýðý */
    .product-title {
        font-size: 2.2rem;
        color: #f8f8f8;
        letter-spacing: 1px;
        text-shadow: 0 0 10px rgba(255, 215, 135, 0.25);
    }

    /* Fiyat etiketi */
    .product-price {
        display: inline-block;
        background: #ffc107;
        color: #212529;
        padding: 10px 26px;
        font-size: 1.5rem;
        font-weight: 700;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(255, 193, 7, 0.35);
    }

    /* Ürün Kartý */
    .product-image-card {
        background: #1a1a1a;
        border: 1px solid #2f2f2f;
        padding: 18px;
        border-radius: 16px;
        overflow: hidden;
        transition: .35s ease;
    }

        .product-image-card:hover {
            border-color: #ffc107;
            transform: translateY(-6px);
            box-shadow: 0 12px 30px rgba(255, 193, 7, 0.25);
        }

    /* Ürün Görseli */
    .product-img {
        width: 100%;
        border-radius: 12px;
        transition: .35s ease;
    }

        .product-img:hover {
            transform: scale(1.03);
        }

    /* Açýklama yazýsý */
    .product-summary {
        color: #cccccc;
        line-height: 1.6rem;
        font-size: 1.1rem;
    }

    /* Butonlar */
    .btn-outline-light {
        border-width: 2px;
        font-weight: 600;
    }

        .btn-outline-light:hover {
            background: #ffffff22;
        }

    /* Sepete ekle butonu */
    .add-cart-btn {
        transition: all .3s ease;
    }

        .add-cart-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(255, 193, 7, 0.4);
        }
</style>
