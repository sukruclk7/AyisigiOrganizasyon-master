@model IEnumerable<Product>

<div class="container my-5">

    <!-- Baþlýk -->
    <div class="text-center text-light mb-4">
        <h2 class="fw-bold">Vitrin</h2>
        <p class="text-muted">Öne çýkan düðün paketleri</p>
    </div>

    <!-- Ürün Listesi -->
    <div class="row g-4">

        @foreach (var prd in Model)
        {
            <div class="col-md-6 col-lg-4">
                
                <partial name="Components/Showcase/_ShowcaseCard"
                         model="prd" />
            </div>
        }

    </div>
</div>

<style>
    h2, p {
        text-shadow: 0 2px 6px rgba(0, 0, 0, .5);
    }
</style>
