@model Product

<div class="showcase-card shadow-lg">

    <!-- Ürün görseli -->
    <div class="showcase-image-wrapper">
        <img src="@Model?.ImageUrl"
             alt="@Model.ProductName"
             class="showcase-image" />
    </div>

    <!-- İçerik -->
    <div class="showcase-content text-center p-4">

        <h3 class="showcase-title mb-2">
            @Model.ProductName
        </h3>

        <div class="showcase-price mb-3">
            @Model?.ProductPrice.ToString("C2")
        </div>

        <p class="text-muted small mb-4">
            @Model?.Summary
        </p>

        <div class="d-flex justify-content-center gap-2">

            <!-- Detay -->
            <a asp-controller="Product"
               asp-action="Get"
               asp-route-id="@Model.ProductId"
               class="btn btn-outline-warning showcase-btn">
                <i class="fa-regular fa-eye"></i>
            </a>

            <!-- Sepete ekle -->
            <form id="@Model.ProductId" asp-page="/cart" method="post">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden"
                       name="returnUrl"
                       value="@ViewContext.HttpContext.Request.PathAndQuery()" />

                <button type="submit"
                        class="btn btn-warning showcase-btn">
                    <i class="fa fa-cart-plus"></i>
                </button>
            </form>

        </div>
    </div>
</div>

<style>
    .showcase-card {
        border-radius: 18px;
        background: #181818;
        border: 1px solid #2b2b2b;
        overflow: hidden;
        transition: all .3s ease;
        height: 100%;
    }

        .showcase-card:hover {
            transform: translateY(-8px);
            border-color: #ffc107;
            box-shadow: 0 12px 30px rgba(255, 193, 7, 0.28);
        }

    .showcase-image-wrapper {
        width: 100%;
        height: 260px;
        overflow: hidden;
        background: #111;
    }

    .showcase-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all .4s ease;
    }

    .showcase-card:hover .showcase-image {
        transform: scale(1.06);
        filter: brightness(1.12);
    }

    .showcase-title {
        color: #fff;
        font-weight: 600;
        letter-spacing: .4px;
    }

    .showcase-price {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 999px;
        background: #ffc107;
        color: #111;
        font-weight: 600;
        font-size: 1.1rem;
        box-shadow: 0 4px 10px rgba(255, 193, 7, .35);
    }

    .showcase-btn {
        width: 52px;
        height: 46px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        transition: all .3s ease;
    }

        .showcase-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 14px rgba(255, 193, 7, .26);
        }
</style>
