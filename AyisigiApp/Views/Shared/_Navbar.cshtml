        border-bottom: 2px solid rgba(255, 215, 120, 0.25);
        padding: 0.9rem 1rem;
        animation: fadeIn 0.6s ease;
    }

    .nav-logo {
        height: 46px;
        transition: 0.3s ease;
        filter: drop-shadow(0 0 6px rgba(255, 208, 118, 0.25));
    }

    .nav-logo:hover {
        transform: scale(1.08);
        filter: drop-shadow(0 0 12px rgba(255, 208, 118, 0.45));
    }

    .brand-text {
        font-weight: 700;
        color: #f0d08a;
        font-size: 1.25rem;
        letter-spacing: 0.5px;
        text-shadow: 0 0 8px rgba(255, 208, 118, 0.35);
    }

    .nav-links .nav-link {
        position: relative;
        color: #f2f2f2 !important;
        font-size: 1rem;
