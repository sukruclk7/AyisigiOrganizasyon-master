@model LoginModel

<div class="login-wrapper">

    <div class="login-card shadow-lg">

        <div class="text-center mb-4">
            <div class="login-icon">
                <i class="fa-solid fa-right-to-bracket"></i>
            </div>
            <h2 class="login-title">Giriş Yap</h2>
            <p class="login-sub">Hesabınıza erişmek için bilgilerinizi girin</p>
        </div>

        <div class="text-danger" asp-validation-summary="All"></div>

        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Kullanıcı Adı</label>
                <input asp-for="Name" class="form-control login-input" />
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input type="password" asp-for="Password" class="form-control login-input" />
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn login-btn">
                    <i class="fa-solid fa-right-to-bracket me-2"></i>
                    Giriş Yap
                </button>
            </div>
        </form>

        <div class="text-center mt-4 login-register">
            Hesabınız yok mu?
            <a asp-action="Register">Kayıt Ol</a>
        </div>

    </div>
</div>

<style>
    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 3rem 1rem;
    }

    .login-card {
        background: rgba(20, 20, 20, 0.85);
        padding: 2.5rem;
        border-radius: 1rem;
        width: 100%;
        max-width: 430px;
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 215, 120, 0.2);
    }

    .login-icon {
        background: #f8f9fa;
        color: #111;
        width: 70px;
        height: 70px;
        border-radius: 50%;
        font-size: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
        box-shadow: 0 4px 12px rgba(255, 208, 118, 0.25);
    }

    .login-title {
        color: #f8f9fa;
        margin-top: 1rem;
        font-weight: 700;
    }

    .login-sub {
        color: #bfbfbf;
        font-size: 0.95rem;
    }

    .form-label {
        color: #f1f1f1;
        font-weight: 500;
    }

    .login-input {
        background: #1c1c1c;
        border: 1px solid #333;
        color: white;
        padding: 0.7rem;
        border-radius: 0.5rem;
        transition: all .25s ease;
    }

        .login-input:focus {
            border-color: #AF8A49;
            box-shadow: 0 0 8px rgba(175, 138, 73, 0.5);
        }

    .login-btn {
        background: linear-gradient(135deg, #AF8A49, #d8b765);
        border: none;
        padding: 0.7rem 2rem;
        font-weight: 600;
        border-radius: 0.5rem;
        color: #111;
        transition: 0.3s ease;
    }

        .login-btn:hover {
            background: linear-gradient(135deg, #d8b765, #AF8A49);
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(175, 138, 73, 0.4);
        }

    .login-register {
        color: #ccc;
        margin-top: 1.2rem;
    }

        .login-register a {
            color: #f7d791;
            font-weight: 600;
            text-decoration: none;
        }

            .login-register a:hover {
                color: #ffe8b3;
                text-decoration: underline;
            }
</style>
